{
  "name": "react-pride-banner",
  "version": "0.0.2",
  "description": "A simple pride flag component for React apps",
  "main": "lib/index.js",
  "types": "lib/index.d.js",
  "files": [
    "lib",
    "./README.md"
  ],
  "repository": "git@github.com:haldunanil/react-pride.git",
  "author": "Haldun Anil",
  "license": "MIT",
  "scripts": {
    "test": "jest --env=jsdom",
    "coverage": "jest --env=jsdom --coverage",
    "prebuild": "rimraf lib",
    "build:babel": "babel src -d lib --extensions .ts,.tsx",
    "build:types": "tsc --emitDeclarationOnly",
    "build": "npm-run-all --parallel build:**",
    "prewatch": "rimraf lib",
    "watch:babel": "yarn build:babel --watch",
    "watch:types": "yarn build:types --watch",
    "watch": "npm-run-all --parallel watch:**",
    "release": "standard-version"
  },
  "peerDependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "styled-components": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.10",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "babel-plugin-styled-components": "^1.10.7",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.5.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-styled-components": "^7.0.2",
    "lint-staged": "^10.2.8",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "standard-version": "^8.0.0",
    "styled-components": "^5.1.1",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "jest --bail --findRelatedTests"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
